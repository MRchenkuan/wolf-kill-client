/* pages/ready/index.wxss */

.players, .roles {
    display: flex;
    flex-wrap: wrap;
}

.btn {
    padding: 20rpx;
    width: 50%;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    margin: 80rpx auto 0;
    text-align: center;
    border-radius: 10rpx;
}

.btn-success{
    background: linear-gradient(to bottom right, #8BC34A, #4CAF50);
}
.btn-danger{
    background: linear-gradient(to bottom right, #ff8069, #e70012);
}
.btn-warn{
    background: linear-gradient(to bottom right, #FFC107, #FF9800);
}

.btn-group{
    margin: 30rpx;
    display: flex;
    justify-content: space-between;
}
.btn-group .btn{
    width: 30%;
    height: 30rpx;
    line-height: 30rpx;
    margin: 0;
    padding: 20rpx 0;
}

.btn.vote{
    width: auto;
    height: 50rpx;
    line-height: 50rpx;
    margin: 80rpx 30rpx 0;
}

page{
    /* transition: 1000ms ease 600ms; */
    background-size: auto 120%;
    animation: scaleBG 600ms ease 100ms;
}

page::before{
    content: "";
    width:100%;
    height:100%;
    position: absolute;
    left:0;
    top:0;
    background: inherit;
    filter: blur(2px);
    z-index: -1;
}

@keyframes scaleBG{
    0% {
        background-size: auto 100%;
    }

    100% {
        background-size: auto 120%
    }
}

.container{
    padding: 5vw 20rpx 0;
}

.mark-items>view{
    margin: 20rpx;
    padding: 20rpx;
    font-size: 30rpx;
    background: rgba(0, 0, 0, .5);
    border-radius: 10rpx;
    text-align: center;
}
.mark-items .head{
    padding: 5rpx;
    background: rgba(0, 0, 0, .5);
    border-radius: 10rpx;
    display:inline-block;
}
.viewver{
    text-align: center;
    margin-top: 40rpx;
}
.share-desc{
    color: #6e5a34;
    text-shadow: 1px 1px 1px #fdf1db;
    font-size: 28rpx;
    margin: 20rpx 20rpx;
}
.btn-share{
    color: #fff;
    margin: 40rpx 20rpx;
    background: linear-gradient(to bottom right, #8BC34A, #4CAF50);
}
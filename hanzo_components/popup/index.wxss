/* hanzo_components/popup/index.wxss */
.popup-center {
  -webkit-transform: translate3d(-50%, -50%, 0);
          transform: translate3d(-50%, -50%, 0);
  top: 50%;
  left: 50%;
}
.popup-top {
  width: 100%;
  top: 0;
  right: auto;
  bottom: auto;
  left: auto;
}
.popup-right {
  top: 50%;
  right: 0;
  bottom: auto;
  left: auto;
}
.popup-bottom {
  right: auto;
  left: auto;
  top: auto;
  bottom: 0;
  width: 100%;
}
.popup-left {
  top: 50%;
  right: auto;
  bottom: auto;
  left: 0;
}

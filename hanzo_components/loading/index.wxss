.hanzo-loading {
  z-index: 0;
  line-height: 0;
  position: relative;
  display: inline-block;
  vertical-align: middle;
}
.hanzo-loading__spinner {
  z-index: -1;
  width: 100%;
  height: 100%;
  position: relative;
  display: inline-block;
  box-sizing: border-box;
  -webkit-animation: hanzo-rotate 0.8s linear infinite;
          animation: hanzo-rotate 0.8s linear infinite;
}
.hanzo-loading__spinner--spinner {
  -webkit-animation-timing-function: steps(12);
          animation-timing-function: steps(12);
}
.hanzo-loading__spinner--circular {
  border: 1rpx solid;
  border-radius: 100%;
  border-color: transparent;
  border-top-color: currentColor;
}
.hanzo-loading__dot {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
}
.hanzo-loading__dot::before {
  width: 2rpx;
  height: 25%;
  content: ' ';
  display: block;
  margin: 0 auto;
  border-radius: 40%;
  background-color: currentColor;
}
.hanzo-loading__dot:nth-of-type(1) {
  opacity: 1;
  -webkit-transform: rotate(30deg);
          transform: rotate(30deg);
}
.hanzo-loading__dot:nth-of-type(2) {
  opacity: 0.9375;
  -webkit-transform: rotate(60deg);
          transform: rotate(60deg);
}
.hanzo-loading__dot:nth-of-type(3) {
  opacity: 0.875;
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.hanzo-loading__dot:nth-of-type(4) {
  opacity: 0.8125;
  -webkit-transform: rotate(120deg);
          transform: rotate(120deg);
}
.hanzo-loading__dot:nth-of-type(5) {
  opacity: 0.75;
  -webkit-transform: rotate(150deg);
          transform: rotate(150deg);
}
.hanzo-loading__dot:nth-of-type(6) {
  opacity: 0.6875;
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.hanzo-loading__dot:nth-of-type(7) {
  opacity: 0.625;
  -webkit-transform: rotate(210deg);
          transform: rotate(210deg);
}
.hanzo-loading__dot:nth-of-type(8) {
  opacity: 0.5625;
  -webkit-transform: rotate(240deg);
          transform: rotate(240deg);
}
.hanzo-loading__dot:nth-of-type(9) {
  opacity: 0.5;
  -webkit-transform: rotate(270deg);
          transform: rotate(270deg);
}
.hanzo-loading__dot:nth-of-type(10) {
  opacity: 0.4375;
  -webkit-transform: rotate(300deg);
          transform: rotate(300deg);
}
.hanzo-loading__dot:nth-of-type(11) {
  opacity: 0.375;
  -webkit-transform: rotate(330deg);
          transform: rotate(330deg);
}
.hanzo-loading__dot:nth-of-type(12) {
  opacity: 0.3125;
  -webkit-transform: rotate(360deg);
          transform: rotate(360deg);
}
@-webkit-keyframes hanzo-rotate {
  from {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}
@keyframes hanzo-rotate {
  from {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}

.h-btn {
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  -webkit-user-select: none;
     -moz-user-select: none;
      -ms-user-select: none;
          user-select: none;
  font-size: 28rpx;
  border-radius: 2rpx;
  border: 0 !important;
  padding-left: 40rpx;
  padding-right: 40rpx;
  position: relative;
  text-decoration: none;
  height: 72rpx;
  line-height: 72rpx;
  box-shadow: inset 0 0 0 1rpx rgba(0, 0, 0, 0.1);
  color: #fff !important;
  background: #e60012 !important;
  color: #f7f7f7 !important;
  margin: 10rpx;
}
.h-btn-hover {
  opacity: 0.9;
}
.h-btn-long {
  border-radius: 0;
  margin: 0;
  box-shadow: none;
}
.h-btn-large {
  height: 84rpx;
  line-height: 84rpx;
}
.h-btn-small {
  height: 48rpx;
  line-height: 48rpx;
}
.h-btn-primary {
  color: #fff !important;
  background: #e60012 !important;
}
.h-btn-outline {
  color: #fff !important;
  background: #fff !important;
  color: #555555 !important;
  box-shadow: inset 0 0 0 1rpx rgba(0, 0, 0, 0.2);
}
.h-btn-success {
  color: #fff !important;
  background: #19be6b !important;
}
.h-btn-warn {
  color: #fff !important;
  background: #ff7320 !important;
}
.h-btn-error {
  color: #fff !important;
  background: #ed3f14 !important;
}
.h-btn-info {
  color: #fff !important;
  background: #21c0ad !important;
}
.h-btn-circle {
  border-radius: 72rpx;
}
.h-btn-large.h-btn-circle {
  border-radius: 84rpx;
}
.h-btn-small.h-btn-circle {
  border-radius: 48rpx;
}
.h-btn-loading {
  opacity: 0.8;
}
.h-btn-loading-inner {
  display: inline-block;
  margin-right: 12rpx;
  vertical-align: middle;
  width: 14rpx;
  height: 14rpx;
  background: transparent;
  border-radius: 50%;
  border: 2rpx solid #fff;
  border-color: #fff #fff #fff transparent;
  -webkit-animation: btn-spin 0.6s linear;
          animation: btn-spin 0.6s linear;
  -webkit-animation-iteration-count: infinite;
          animation-iteration-count: infinite;
}
.h-btn-disabled {
  color: #fff !important;
  background: #d8d8d8 !important;
  box-shadow: none !important;
}
.h-btn-inline {
  display: inline-block;
}
@-webkit-keyframes btn-spin {
  0% {
    -webkit-transform: rotate(0);
            transform: rotate(0);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}
@keyframes btn-spin {
  0% {
    -webkit-transform: rotate(0);
            transform: rotate(0);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}

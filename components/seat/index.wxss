/* components/Seat/index.wxss */

.seat {
    position: relative;
    width: 100rpx;
    height: 100rpx;
    margin: 8rpx;
    border: 2px solid #fff;
    box-sizing: border-box;
    background: grey;
    color: #fff;
    border-radius: 5rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.seat.judge{
    box-shadow:0 0 20rpx 6rpx gold;
    transform: scale(1.2);
}

.empty {
    position: absolute;
    left: 0;
    top: 0;
    font-size: 50rpx;
    color: #fff;
    width: 96rpx;
    height: 96rpx;
    line-height: 96rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.role{
    position:absolute;
    bottom:0;
    left:0;
    width:100%;
    font-size:26rpx;
    right:0;
    height:26rpx;
    text-align:center;
    background:rgba(0,0,0,.5);
    padding-bottom:10rpx;
    z-index: 0
}

.sheriff{
    color: rgb(70, 70, 235);
    font-size: 20rpx;
    font-weight: 900;
    transform:translate3d(-30%, -20%, 0) rotate(-45deg) ;
    background:rgba(255, 255, 255, .8);
    position: absolute;
    top: 0;
    left: 0;
    border: 2px dashed rgb(70, 70, 235);
    padding: 0 10rpx;
    border-radius: 5rpx;
    z-index: 2;
}

.localstamp{
    color: rgb(52, 109, 64);
    font-size: 20rpx;
    font-weight: 900;
    transform:translate3d(30%, -20%, 0) rotate(45deg) ;
    background:rgba(202, 200, 200, 1);
    position: absolute;
    top: 0;
    right: 0;
    border: 2px dashed rgb(52, 109, 64);
    padding: 0 10rpx;
    white-space:nowrap;
    border-radius: 5rpx;
    z-index: 2;
}
.localstamp.danger{
  color: rgb(226, 66, 66);
  border: 2px dashed rgb(226, 66, 66);
}

.die-tag{
    color: rgb(226, 66, 66);
    font-size: 20rpx;
    font-weight: 900;
    transform:translate3d(-50%, -50%, 0);
    background:rgba(255, 255, 255, .8);
    position: absolute;
    top: 50%;
    left: 50%;
    white-space:nowrap;
    border: 2px dashed rgb(226, 66, 66);
    padding: 0 10rpx;
    border-radius: 5rpx;
    z-index: 2;
}
.die-cover{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:rgba(0,0,0,.6);
    z-index: 1;
}

.avt{
    width:100%;
    height:100%;
}
.name{
    font-size: 20rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    margin-bottom: 10rpx;
}

.simplename{
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background:rgba(0,0,0,.5);
    font-size: 22rpx;
    padding: 5rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    z-index: 0;
    font-weight: 900;
    text-align: center;
    max-height: 45%;
}
.frame{
    position: relative;
}
.tool{
    position: absolute;
    right: 0;top: 0;
}
.seat-number{
  position: absolute;
  left: 50%;
  top: 0;
  padding: 2rpx;
  background: rgba(0,0,0,.8);
  transform: translate(-50%, -50%);
  text-align: center;
  font-size: 28rpx;
  border: 1px solid #fff;
  font-weight: 900;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 30rpx;
  z-index: 3;
}
/* components/Seat/index.wxss */

.seat {
    position: relative;
    width: 100rpx;
    height: 100rpx;
    margin: 10rpx;
    border: 2px solid #fff;
    box-sizing: border-box;
    background: grey;
    color: #fff;
    border-radius: 5rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.seat.judge{
    box-shadow:0 0 20rpx 6rpx gold;
}

.empty {
    position: absolute;
    left: 0;
    top: 0;
    font-size: 50rpx;
    color: #fff;
    width: 96rpx;
    height: 96rpx;
    line-height: 96rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.avt{
    width:100%;
    height:100%;
}
.name{
    font-size: 20rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}